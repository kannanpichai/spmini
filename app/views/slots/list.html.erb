<!-- Filter block start -->
<section class="filter-block">

  <%= form_tag("/slots/list", :method => "post", :class => "form-inline", data: { turbo: false }) do %>
    <div class="row align-items-center">
      <div class="col-lg-4">
        <% if flash[:error] %>
          <em class="text-danger">
            <%= flash[:error] %>
          </em>
        <% end %>
      </div>
      <div class="col-lg-2">
        <%= label_tag(:date_filter, "Select Date", :class => "label") %>
      </div>
      <div class="col-lg-4">
        <%= date_field_tag(:date_filter,@selected_date, {class: "form-control"} ) %>
      </div>
      <div class="col-lg-2">
        <%= submit_tag("Filter", :class => "btn btn-sm btn-primary") %>
      </div>
    </div>
  <% end %>

</section>
<!-- Filter block end -->

<!-- Data Grid Start -->
<section>

  <table class="table data-table">
    <thead>
    <tr>
      <th>Slot No.</th>
      <th>Vehicle Reg No.</th>
      <th>Parking Duration (Hours)</th>
      <th>Booked Date & Time</th>
      <th>Expiry Date & Time</th>

    </tr>
    </thead>
    <tbody>
    <% @slots.each do |slot| %>
      <tr>
        <td><%= slot.parking_slot.slot_no %></td>
        <td><%= slot.vehicle_reg_no %></td>
        <td><%= slot.duration_in_hrs %></td>
        <td><%= format_dt(slot.booked_at) %></td>
        <td><%= format_dt(slot.expiry_at) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
<!-- Data Grid End -->
